@page
@model Digital_Matter_Web_App.Pages.Firmware.CreateNewModel
@{
}

<br>
<h2>New Firmware</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Version</label>
        <div class="col-sm-6">
            <input type="text" class="from-control" name="version" value="@Model.firmwareInfo.version">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Release Date</label>
        <div class="col-sm-6">
            <input type="text" class="from-control" name="releasedate" value="@Model.firmwareInfo.releasedate.ToString("yyyy/dd/MM")">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Description</label>
        <div class="col-sm-6">
            <input type="text" class="from-control" name="description" value="@Model.firmwareInfo.description">
        </div>
    </div>


    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@Model.successMessage</strong>
                    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='close'></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>