@page
@model Digital_Matter_Web_App.Pages.Devices.EditModel
@{
}
<br>
<h2>Edit Device</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <input type="hidden" name="id" value="@Model.deviceInfo.id">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" class="from-control" name="name" value="@Model.deviceInfo.name">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Device Type</label>
        <div class="col-sm-6">
            <input type="text" class="from-control" name="devicetype" value="@Model.deviceInfo.type">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Group ID</label>
        <div class="col-sm-6">
            <input type="text" class="from-control" name="groupid" value="@Model.deviceInfo.groupid">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Firmware ID</label>
        <div class="col-sm-6">
            <input type="text" class="from-control" name="firmwareid" value="@Model.deviceInfo.firmwareid">
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@Model.successMessage</strong>
                    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='close'></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>